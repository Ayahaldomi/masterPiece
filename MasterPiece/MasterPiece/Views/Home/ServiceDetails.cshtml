
@{
    ViewBag.Title = "ServiceDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* General Styling */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
    }




    /* Main Content */
    .main-content {
        display: flex;
        margin: auto;
    }

    /* Sidebar */
    .sidebar {
        width: 25%;
        padding-right: 20px;
    }

        .sidebar h3 {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin-bottom: 10px;
            }

            .sidebar ul a {
                text-decoration: none;
                color: #007bff;
            }

    .checkups img {
        width: 100%;
        height: auto;
        margin-bottom: 5px;
    }

    .checkups p {
        margin-bottom: 20px;
        font-size: 14px;
        font-weight: bold;
    }

    /* Service Content */
    .service-content {
        width: 75%;
    }

    .main-img {
        width: 100%;
        height: auto;
    }

    .offer-badge {
        position: absolute;
        top: 10px;
        right: 20px;
        background-color: #7c27b8;
        color: #fff;
        padding: 5px 10px;
        font-size: 16px;
        border-radius: 3px;
    }

    .special-requirements {
        background-color: #f0f0f0;
        padding: 15px;
        margin-top: 20px;
        border-left: 5px solid #ff9900;
    }

        .special-requirements h3 {
            margin: 0;
            display: flex;
            align-items: center;
        }

            .special-requirements h3 .icon {
                margin-right: 10px;
            }

    .profile-includes {
        margin-top: 20px;
    }

        .profile-includes ul {
            list-style-type: none;
            padding: 0;
        }

            .profile-includes ul li {
                padding: 10px 0;
                border-bottom: 1px solid #e0e0e0;
            }

   

</style>
<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Package Details</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb text-uppercase mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Package Details</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Main Content Section -->
<div class="container main-content">
    <!-- Sidebar -->
    <div class="sidebar">
        
        <h3>More Checkups</h3>
        <div class="checkups">
            <img src="~/myContent/img/Checkups_BioMom to be.png" alt="Menopause">
            <p>PrimeLab Mom to be</p>
            <img src="~/myContent/img/Checkups_BioCardiac Risk.png" alt="Family">
            <p>PrimeLab Cardiac Risk</p>
            <!-- Add more as needed -->
        </div>
    </div>

    <!-- Main Service Section -->
    <div class="service-content">
        <img src="~/myContent/img/junior wellness 700 x 1280 px.jpg" alt="Kids Stretching" class="main-img"> <!-- Replace with the real image -->
        <div class="offer-badge">Save up to 50%</div>
        <h1>BioJuniors</h1>
        <p>A comprehensive health checkup designed for children to ensure their overall well-being and monitor the health of young individuals, offering peace of mind to parents.</p>

        <div class="special-requirements">
            <h3><span class="icon">⚠</span> Special Requirements</h3>
            <p>Fasting from 10-12 hours.</p>
        </div>

        <div class="profile-includes">
            <h3>Profile includes</h3>
            <ul>
                <li>Complete Blood Count (CBC)</li>
                <li>Erythrocyte Sedimentation Rate (ESR)</li>
                <li>Random Blood Glucose, Serum</li>
                <li>Calcium, Serum</li>
                <li>Ferritin, Serum</li>
                <li>Vitamin B12 (Cyanocobalamin), Serum</li>
                <li>Urine Analysis</li>
            </ul>
        </div>
    </div>
</div>
